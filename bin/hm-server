#!/usr/bin/env node

var util    = require('util'),
    nowjs   = require("now"),
    server  = require('../lib/server-wrapper');

server.configure()
    .publicDir(__dirname + '/../public')
    .indexFile('index.html')
    .port(3000)
    .observe('server:configure', function(config, server) {
      var everyone = nowjs.initialize(server);
      everyone.now.getServerInfo = function(callback){
        callback(app.socialStream.all());
      }
    });

server.start();
